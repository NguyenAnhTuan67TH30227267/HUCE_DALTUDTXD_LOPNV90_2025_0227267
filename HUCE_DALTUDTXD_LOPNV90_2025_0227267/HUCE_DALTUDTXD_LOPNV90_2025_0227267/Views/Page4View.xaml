<UserControl x:Class="HUCE_DALTUDTXD_LOPNV90_2025_0227267.Views.Page4View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HUCE_DALTUDTXD_LOPNV90_2025_0227267.Views"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"
            >

    <UserControl.Resources>
        <!-- Các màu chung -->
        <SolidColorBrush x:Key="primaryBackColor1Brush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="secondaryBackColor1Brush" Color="#2F2F2F"/>
        <SolidColorBrush x:Key="panelColorBrush" Color="#252525"/>
        <SolidColorBrush x:Key="winBorderColor1Brush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="color1Brush" Color="#5C9EFF"/>
        <SolidColorBrush x:Key="color3Brush" Color="#62E8E2"/>
        <SolidColorBrush x:Key="color9Brush" Color="#00EFB3"/>
        <SolidColorBrush x:Key="titleColor1Brush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="titleColor2Brush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="plainTextColor1Brush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="selectionBrush" Color="#5C9EFF" Opacity="0.5"/>

        <!-- Style cho TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource winBorderColor1Brush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1Brush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource color3Brush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource selectionBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer Margin="2" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource winBorderColor1Brush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource secondaryBackColor1Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1Brush}"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="#2A2A2A"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#333"/>
                        <Setter Property="Foreground" Value="{StaticResource color3Brush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#444"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style cho Button chung -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="{StaticResource color1Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1Brush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A8DFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.Row="1"
                Background="{StaticResource secondaryBackColor1Brush}"
                BorderBrush="{StaticResource winBorderColor1Brush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <StackPanel>

                <!-- Tiêu đề -->
                <TextBlock Text=" NHẬP GIÁ TRỊ NỘI LỰC"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource color3Brush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <WrapPanel>
                    <!-- Chọn Tên móng -->
                    <TextBlock Text="Tên móng:     "
                           FontWeight="SemiBold"
                           Foreground="{StaticResource color9Brush}"
                           FontSize="15"
                           Margin="10,10"/>
                    <ComboBox ItemsSource="{Binding DanhSachMong}" Width="350"
                          DisplayMemberPath="TenMong"
                          SelectedItem="{Binding SelectedMong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource ModernComboBox}"/>
                
                    <!-- Moment (M) Input -->
                    <TextBlock Text="Moment (M):"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource color9Brush}"
                           FontSize="15"
                           Margin="10,10"/>
                    <TextBox x:Name="MomentInput"
                         Text="{Binding ForceInput.Moment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                         Style="{StaticResource ModernTextBox}"
                         Width="350"/>
                </WrapPanel>
                <WrapPanel>
                    <!-- Axial Force (N) Input -->
                    <TextBlock Text="Lực Dọc (N): "
                           FontWeight="SemiBold"
                           Foreground="{StaticResource color9Brush}"
                           FontSize="15"
                           Margin="10,10"/>
                    <TextBox x:Name="AxialForceInput"
                         Text="{Binding ForceInput.AxialForce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                         Style="{StaticResource ModernTextBox}"
                         Width="350"/>
                </WrapPanel>
                <WrapPanel>
                    <!-- Shear Force (Q) Input -->
                    <TextBlock Text="Lực Cắt (Q):  "
                           FontWeight="SemiBold"
                           Foreground="{StaticResource color9Brush}"
                           FontSize="15"
                           Margin="10,10"/>
                    <TextBox x:Name="ShearForceInput"
                         Text="{Binding ForceInput.ShearForce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                         Style="{StaticResource ModernTextBox}"
                         Width="350"/>
                </WrapPanel>
                <!-- Nút Xác nhận -->
                <Button Content="XÁC NHẬN"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Background="#4CAF50"
                        Width="140"
                        HorizontalAlignment="Center"
                        Margin="10,10"/>
            </StackPanel>
        </Border>
        <DataGrid ItemsSource="{Binding ForceInputList}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" Style="{StaticResource ModernDataGrid}"
                  Margin="0,10,0,0" Grid.Row="2"                   
                  Height="200" Grid.ColumnSpan="3" FontSize="15"
                  Background="{StaticResource panelColorBrush}"
                  BorderBrush="{StaticResource winBorderColor1Brush}"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource winBorderColor1Brush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên móng" Binding="{Binding Mong.TenMong}" Width="*"/>
                <DataGridTextColumn Header="Chiều rộng (m)" Binding="{Binding Mong.ChieuRongMong, StringFormat={}{0:N2}}" Width="*"/>
                <DataGridTextColumn Header="Chiều sâu (m)" Binding="{Binding Mong.ChieuSauChonMong, StringFormat={}{0:N2}}" Width="*"/>
                <DataGridTextColumn Header="Moment (M)" Binding="{Binding Moment, StringFormat={}{0:N2}}" Width="*"/>
                <DataGridTextColumn Header="Lực Dọc (N)" Binding="{Binding AxialForce, StringFormat={}{0:N2}}" Width="*"/>
                <DataGridTextColumn Header="Lực Cắt (Q)" Binding="{Binding ShearForce, StringFormat={}{0:N2}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<UserControl x:Class="HUCE_DALTUDTXD_LOPNV90_2025_0227267.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="850">
    <Border CornerRadius="20">
        <Border.Background>
            <SolidColorBrush Color="#121212"/>
        </Border.Background>
        <Border CornerRadius="15" BorderThickness="1" Opacity="1">
            <Border.BorderBrush>

                <SolidColorBrush Color="#2D2D2D"/>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E1E1E" Offset="0"/>
                    <GradientStop Color="#121212" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <StackPanel Width="500" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/gear.png" Width="120" Height="120" HorizontalAlignment="Center"/>
                    <TextBlock Text="Phần mềm hỗ trợ tính toán và thiết kế móng băng theo tiêu chuẩn Việt Nam. Cho phép người dùng nhập tải trọng, cấu kiện, và thông số đất nền để nhanh chóng xác định kích thước móng, cốt thép chịu lực và kiểm tra điều kiện làm việc. Giao diện trực quan, dễ sử dụng, thích hợp cho kỹ sư xây dựng trong công tác thiết kế nền móng công trình."
                               Foreground="#B0B0B0"
                               FontSize="16"
                               FontFamily="Montserrat"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="20,20,20,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>

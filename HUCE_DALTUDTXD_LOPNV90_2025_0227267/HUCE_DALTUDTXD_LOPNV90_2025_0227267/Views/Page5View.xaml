<UserControl x:Class="HUCE_DALTUDTXD_LOPNV90_2025_0227267.Views.Page5View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HUCE_DALTUDTXD_LOPNV90_2025_0227267.Views"
                    xmlns:vm="clr-namespace:HUCE_DALTUDTXD_LOPNV90_2025_0227267.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1000" d:DesignHeight="600"
            >

    <UserControl.Resources>
        
        <!-- Color Resources -->
        <SolidColorBrush x:Key="primaryBackColor1Brush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="secondaryBackColor1Brush" Color="#2F2F2F"/>
        <SolidColorBrush x:Key="panelColorBrush" Color="#252525"/>
        <SolidColorBrush x:Key="winBorderColor1Brush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="color1Brush" Color="#5C9EFF"/>
        <SolidColorBrush x:Key="color3Brush" Color="#62E8E2"/>
        <SolidColorBrush x:Key="color9Brush" Color="#00EFB3"/>
        <SolidColorBrush x:Key="titleColor1Brush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="titleColor2Brush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="plainTextColor1Brush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="selectionBrush" Color="#5C9EFF" Opacity="0.5"/>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource winBorderColor1Brush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1Brush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource color3Brush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource selectionBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer Margin="2" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource winBorderColor1Brush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource panelColorBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="{StaticResource color1Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1Brush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A8DFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Title -->
            <TextBlock Text="KIỂM TRA SỨC CHỊU TẢI CỦA MÓNG"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource color3Brush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Section: Chọn nội lực -->
            <Border Background="{StaticResource secondaryBackColor1Brush}"
        BorderBrush="{StaticResource winBorderColor1Brush}"
        BorderThickness="1"
        CornerRadius="8"
        Padding="15">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="BẢNG TỔNG HỢP KIỂM TRA SỨC CHỊU TẢI"
                       FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource color3Brush}"/>

                        <Button Content="Tính toán lại" 
                    HorizontalAlignment="Right"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CalculateAllCommand}"/>
                    </Grid>

                    <DataGrid ItemsSource="{Binding CalculationResults}"
                  AutoGenerateColumns="False"
                  Background="Transparent"
                  BorderThickness="0"
                  Foreground="White"
                  RowBackground="#333333"
                  AlternatingRowBackground="#3A3A3A"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  FontSize="13">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource winBorderColor1Brush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#222"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên Móng" Binding="{Binding TenMong}" Width="100"/>
                            <DataGridTextColumn Header="Ptb (T/m²)" Binding="{Binding Ptb, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="Pmax (T/m²)" Binding="{Binding Pmax, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="Pmin (T/m²)" Binding="{Binding Pmin, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="P0max (T/m²)" Binding="{Binding P0max, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="P0 min (T/m2)" Binding="{Binding P0min}" Width="*"/>
                            <DataGridTextColumn Header="P Đ.Thủng" Binding="{Binding PDamThung, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="P Chống ĐT" Binding="{Binding PChongDamThung, StringFormat=N2}" Width="*"/>
                            <DataGridTextColumn Header="Độ lún S (cm)" 
                            Binding="{Binding DoLun, StringFormat=N2}" 
                            FontWeight="Bold"
                            Foreground="#62E8E2"
                            Width="*"/>
                            <!--<DataGridTemplateColumn Header="Ghi chú" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GhiChu}" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding GhiChu, Converter={StaticResource StatusToColorConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>-->
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

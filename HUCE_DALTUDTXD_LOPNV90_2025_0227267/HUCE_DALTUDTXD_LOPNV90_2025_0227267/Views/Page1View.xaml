                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A8DFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

